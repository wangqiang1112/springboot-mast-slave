<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
  
<!-- 指定工作空间，要与接口名相同，源代码没有去看，猜测应该是通过"这里的namespace.下边方法的id"来定位方法的 -->  
<mapper namespace="com.antsoft.mapper.UserMapper">

	<!-- selectAll user -->
	<select id="selectAll" parameterType="java.util.Map" resultType="com.antsoft.model.User">
		SELECT ID,USERNAME,PASSWORD,AGE FROM USER
	</select>

	<update id="update" parameterType="com.antsoft.model.User">
		UPDATE USER SET USERNAME=#{username} , PASSWORD=#{password} , AGE = #{age} WHERE ID=#{id}
	</update>
	
</mapper>